
@model IEnumerable<Proje.MvcWebUI.Entity.Kategori>

@{
    var selectedKategori = Url.RequestContext.RouteData.Values["id"];
}

<ul class="list-group">
    <a href="/Home/Index" class="list-group-item">
        Tüm Ürünler
    </a>
</ul>

<ul class="list-group">

    @foreach (var item in Model)
    {
        if (selectedKategori != null)
        {
            if (item.Id == int.Parse((selectedKategori.ToString())))
            {
                //seçilen kategori ile route ıd eşit

                <a href="~/Home/Index/@item.Id" class="list-group-item active ">
                    @item.Adi
                </a>

            }
            else
            {

                <a href="~/Home/Index/@item.Id" class="list-group-item">
                    @item.Adi
                </a>

            }
        }
        else
        {
            <a href="~/Home/Index/@item.Id" class="list-group-item ">
                @item.Adi
            </a>
        }
    }
</ul>




